<div class="w-full">
  <% content_for :title, "Areas" %>

  <div class="px-4 py-5 bg-white border-b border-gray-200 sm:px-6">
    <div class="flex flex-wrap items-center justify-between -mt-2 -ml-4 sm:flex-nowrap">
      <div class="mt-2 ml-4">
        <h3 class="text-base font-semibold text-gray-900 leading-6">All areas</h3>
      </div>
      <div class="flex-shrink-0 mt-2 ml-4">
    <%= link_to "New area", new_admin_area_path, class: "relative inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
      </div>
    </div>
  </div>

  <div class="min-w-full px-4 py-5 bg-white sm:px-6">
    <ul role="list" class="divide-y divide-gray-100">
      <% @areas.each do |area| %>
        <li class="flex items-center justify-between py-5 gap-x-6">
          <div class="min-w-0">
            <div class="flex items-start gap-x-3">
              <p class="text-sm font-semibold text-gray-900 leading-6"><%= area.name %></p>
            </div>
            <div class="flex items-center mt-1 text-xs text-gray-500 gap-x-2 leading-5">
              <p class="truncate">Code: <%= area.code %></p>
            </div>
          </div>
          <div class="flex items-center flex-none gap-x-4">
            <%= link_to "Edit", edit_admin_area_path(area), class: "hidden rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block" %>
            <div class="relative flex-none" data-controller="dropdown">
              <button type="button" class="-m-2.5 block p-2.5 text-gray-500 hover:text-gray-900" id="options-menu-0-button" aria-expanded="false" aria-haspopup="true" data-action="click->dropdown#toggle click@window->dropdown#hide" aria-controls="options-menu-0" aria-label="Open options">
                <span class="sr-only">Open options</span>
                <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
                </svg>
              </button>
              <div class="absolute right-0 z-10 hidden w-32 py-2 mt-2 bg-white shadow-lg origin-top-right rounded-md ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu-0-button" tabindex="-1">
                <%= link_to "Delete", admin_area_path(area), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "block px-3 py-1 text-sm text-gray-900 leading-6" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
