<%= form_with(model: [:admin, regional_bike_rule], class: "") do |form| %>
  <div class="">
    <div class="pt-8">
      <div class="space-y-8">
        <div class="sm:col-span-4">
          <%= form.label :area_id, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.collection_select :area_id, Area.all, :id, :name, {}, 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :source_url, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :source_url, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <div class="flex items-start">
            <div class="flex h-5 items-center">
              <%= form.check_box :bike_always_allowed_without_booking, class: "h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= form.label :bike_always_allowed_without_booking, class: "font-medium text-gray-700" %>
            </div>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :extracted_information, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :extracted_information, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :network_code, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :network_code, Routing::SncfApiRouter::ALLOWED_NETWORKS.keys, {}, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end gap-x-3">
      <%= link_to "Cancel", admin_regional_bike_rules_path, class: "rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= form.submit class: "rounded-md bg-emerald-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
    </div>
  </div>
<% end %> 