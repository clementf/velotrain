<%= form_for :session, url: session_path, local: true, class: "space-y-6" do |form| %>
  <div class="space-y-4">
    <div>
      <%= form.label :email, "Email", class: "block text-sm font-medium text-dark mb-2" %>
      <%= form.email_field :email,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-colors" %>
    </div>

    <div>
      <%= form.label :password, "Mot de passe", class: "block text-sm font-medium text-dark mb-2" %>
      <%= form.password_field :password,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-colors" %>
    </div>
  </div>

  <div>
    <%= form.submit "Connexion", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-dark hover:bg-accent-dark/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-dark transition-colors" %>
  </div>

  <div class="flex flex-col space-y-2 text-center text-sm">
    <% if Clearance.configuration.allow_sign_up? %>
      <span class="text-accent-dark/70">Don't have an account?
        <%= link_to t(".sign_up"), sign_up_path,
            class: "font-medium text-accent-dark hover:text-accent transition-colors" %>
      </span>
    <% end %>
    <%= link_to "Mot de passe oubliÃ© ?", new_password_path,
        class: "text-dark/70 hover:text-dark transition-colors" %>
  </div>
<% end %>
